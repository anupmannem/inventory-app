{
  "$schema": "http://json-schema.org/draft-07/schema",  
  "type": "object",
  "title": "User",
  "description": "The User",  
  "required": [      
    "email",
    "name",
    "password"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
        "$id": "#/properties/id",
        "type": "integer",
        "title": "The database ID of the user"    
    },
    "email": {
        "$id": "#/properties/email",
        "type": "string",
        "title": "The users email. Must be unique",          
        "examples": [
            "anup@computer"
        ]
    },
    "name": {
        "$id": "#/properties/name",
        "type": "string",
        "title": "The users name",          
        "examples": [
            "anup"
        ]
    },
    "password": {
        "$id": "#/properties/name",
        "type": "string",
        "title": "The users hashed password"
    },
    "created_at": {
        "$id": "#/properties/created_at",
        "type": "string",
        "title": "The creation data of the user"
    },
    "updated_at": {
        "$id": "#/properties/updated_at",
        "type": "string",
        "title": "The data the user last updated"
    }
  }
}